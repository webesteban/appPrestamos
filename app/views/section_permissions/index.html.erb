<div class="card-header d-flex align-items-center justify-content-between border-bottom border-light">
  <h4 class="header-title">Permisos por Sección</h4>
  <%= button_to 'Nueva Asignación', new_section_permission_path(format: :turbo_stream), method: :get, form: { data: { turbo_frame: "modal" } }, class: "btn btn-primary" %>
</div>

<%= turbo_frame_tag "section_permissions_table" do %>
  <%= render "search_form", q: @q %>
  <%= render "table", section_permissions: @section_permissions %>
  <%= render partial: "pagination", locals: { pagy: @pagy } %>
<% end %>
