<%= form_with model: section_permission, data: { turbo: false } do |f| %>
  <div class="mb-3">
    <%= f.label :section_id, class: "form-label" %>
    <%= f.collection_select :section_id, Section.all, :id, :name,
        { prompt: "Seleccione un Modulo" },
        { class: "form-control select2" }
    %>
  </div>

  <div class="mb-3">
    <%= f.label :permission_id, class: "form-label" %>
    <%= f.collection_select :permission_id, Permission.all, :id, :name,
      { prompt: "Seleccione un Permiso" },
      { class: "form-control select2" }
    %>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>