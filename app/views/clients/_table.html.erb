<table class="table table-hover">
  <thead>
    <tr>
      <th><%= sort_link @q, :full_name, "NOMBRE" %></th>
      <th><%= sort_link @q, :identification, "IDENTIFICACION" %></th>
      <th><%= sort_link @q, :email, "EMAIL" %></th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% clients.each do |client| %>
      <tr>
        <td><%= link_to client.full_name,
            summary_client_path(client, format: :turbo_stream),
            data: { turbo_frame: "modal" },
            class: "text-blue-600 hover:underline" %></td>
        <td><%= client.identification %></td>
        <td><%= client.email %></td>
        <td>
          <%= link_to "Editar", edit_client_path(client), data: { turbo_frame: "_top" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
