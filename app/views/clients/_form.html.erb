<!-- app/views/clients/_form.html.erb -->
<%= form_with model: client, data: { turbo: false } do |f| %>
  <div class="row">
    <div class="col-md-6 mb-2"><%= f.label :identification, "Cédula" %> <%= f.text_field :identification, class: "form-control" %></div>
    <div class="col-md-6 mb-2"><%= f.label :identification_type, "Tipo de cédula" %> <%= f.text_field :identification_type, class: "form-control" %></div>

    <div class="col-md-6 mb-2"><%= f.label :full_name, "Nombre completo" %> <%= f.text_field :full_name, class: "form-control" %></div>
    <div class="col-md-6 mb-2"><%= f.label :identification_issued_at, "Fecha de emisión de cédula" %> <%= f.date_field :identification_issued_at, class: "form-control" %></div>

    <div class="col-md-6 mb-2"><%= f.label :birth_date, "Fecha de nacimiento" %> <%= f.date_field :birth_date, class: "form-control" %></div>
    <div class="col-md-6 mb-2"><%= f.label :sex, "Sexo" %> <%= f.select :sex, [["Masculino", "M"], ["Femenino", "F"]], include_blank: true, class: "form-control" %></div>

    <div class="col-md-6 mb-2"><%= f.label :address, "Dirección de residencia" %> <%= f.text_field :address, class: "form-control" %></div>
    <div class="col-md-6 mb-2"><%= f.label :billing_address, "Dirección de facturación" %> <%= f.text_field :billing_address, class: "form-control" %></div>

    <div class="col-md-6 mb-2"><%= f.label :mobile_phone, "Teléfono celular" %> <%= f.telephone_field :mobile_phone, class: "form-control" %></div>
    <div class="col-md-6 mb-2"><%= f.label :landline_phone, "Teléfono fijo" %> <%= f.telephone_field :landline_phone, class: "form-control" %></div>

    <div class="col-md-6 mb-2"><%= f.label :occupation, "Ocupación" %> <%= f.text_field :occupation, class: "form-control" %></div>
    <div class="col-md-6 mb-2"><%= f.label :workplace, "Lugar de trabajo" %> <%= f.text_field :workplace, class: "form-control" %></div>

    <div class="col-md-6 mb-2"><%= f.label :income, "Ingreso mensual" %> <%= f.number_field :income, class: "form-control", step: 0.01 %></div>
    <div class="col-md-6 mb-2"><%= f.label :email, "Correo electrónico" %> <%= f.email_field :email, class: "form-control" %></div>

    <div class="col-md-6 mb-2"><%= f.label :latitude, "Latitud" %> <%= f.number_field :latitude, class: "form-control", step: 0.000001 %></div>
    <div class="col-md-6 mb-2"><%= f.label :longitude, "Longitud" %> <%= f.number_field :longitude, class: "form-control", step: 0.000001 %></div>
  </div>

  <hr class="my-4">
  <div class="row">
    <div class="col-12"><h5>Referencia personal 1</h5></div>
    <div class="col-md-6 mb-2"><%= f.label :reference1_name, "Nombre completo" %> <%= f.text_field :reference1_name, class: "form-control" %></div>
    <div class="col-md-6 mb-2"><%= f.label :reference1_identification, "Cédula" %> <%= f.text_field :reference1_identification, class: "form-control" %></div>
    <div class="col-md-6 mb-2"><%= f.label :reference1_address, "Dirección" %> <%= f.text_field :reference1_address, class: "form-control" %></div>
    <div class="col-md-6 mb-2"><%= f.label :reference1_phone, "Teléfono" %> <%= f.telephone_field :reference1_phone, class: "form-control" %></div>
  </div>

  <hr class="my-4">
  <div class="row">
    <div class="col-12"><h5>Referencia personal 2</h5></div>
    <div class="col-md-6 mb-2"><%= f.label :reference2_name, "Nombre completo" %> <%= f.text_field :reference2_name, class: "form-control" %></div>
    <div class="col-md-6 mb-2"><%= f.label :reference2_identification, "Cédula" %> <%= f.text_field :reference2_identification, class: "form-control" %></div>
    <div class="col-md-6 mb-2"><%= f.label :reference2_address, "Dirección" %> <%= f.text_field :reference2_address, class: "form-control" %></div>
    <div class="col-md-6 mb-2"><%= f.label :reference2_phone, "Teléfono" %> <%= f.telephone_field :reference2_phone, class: "form-control" %></div>
  </div>

  <div class="d-flex justify-content-end mt-4">
    <%= f.submit "Guardar", class: "btn btn-primary" %>
  </div>
<% end %>
