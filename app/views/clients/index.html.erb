<!-- app/views/clients/index.html.erb -->

<div class="card-header d-flex align-items-center justify-content-between border-bottom border-light">
  <h4 class="header-title">Clientes</h4>
  <%= button_to 'Nuevo Cliente', new_client_path(format: :turbo_stream), method: :get, form: { data: { turbo_frame: "modal" } }, class: "btn btn-primary" %>
</div>

<div class="table-responsive">
  <table class="table table-nowrap mb-0">
    <thead class="bg-light-subtle">
      <tr>
        <th>Nombre</th>
        <th>Cédula</th>
        <th>Teléfono</th>
        <th class="text-center">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <%= turbo_frame_tag "clients_table" do %>
        <%= render "table", clients: @clients %>
      <% end %>
    </tbody>
  </table>
</div>
