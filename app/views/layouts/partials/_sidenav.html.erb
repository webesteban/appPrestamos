                <div class="collapse" id="sidebarCharts">
                    <ul class="sub-menu">
                        <li class="side-nav-item">
                            <a href="<%= url_for :controller => 'reports', :action => 'loans' %>"  data-turbo="false" class="side-nav-link">
                                <span class="menu-text">Saldos</span>
                            </a>
                        </li>
                        <li class="side-nav-item">
                            <a href="<%= url_for :controller => 'reports', :action => 'collections_progress' %>"  data-turbo="false" class="side-nav-link">
                                <span class="menu-text">Avance Ruta</span>
                            </a>
                        </li>
                        
                        <li class="side-nav-item">
                            <a href="<%= url_for :controller => 'charts', :action => 'column' %>" data-turbo="false" class="side-nav-link">
                                <span class="menu-text">Graficos</span>
                            </a>
                        </li>
                       
                    </ul>
                </div>
            </li>

            <li class="side-nav-item">
                <a data-bs-toggle="collapse" href="#sidebarForms" aria-expanded="false" aria-controls="sidebarForms" class="side-nav-link">
                    <span class="menu-icon"><i class="ti ti-forms"></i></span>
                    <span class="menu-text"> Liquidaciones </span>
                    <span class="menu-arrow"></span>
                </a>
                <div class="collapse" id="sidebarForms">
                    <ul class="sub-menu">
                        <li class="side-nav-item">
                            <a href="<%= url_for :controller => 'settlements', :action => 'new' %>" data-turbo="false" class="side-nav-link">
                                <span class="menu-text">Liquidaciones</span>
                            </a>
                        </li>
                        <li class="side-nav-item">
                            <a href="#" data-turbo="false" class="side-nav-link">
                                <span class="menu-text">Reportes tablas</span>
                            </a>
                        </li>
                        
                    </ul>
                </div>
            </li>

            <li class="side-nav-item">
                <a data-bs-toggle="collapse" href="#sidebarMaps" aria-expanded="false" aria-controls="sidebarMaps" class="side-nav-link">
                    <span class="menu-icon"><i class="ti ti-map-pin"></i></span>
                    <span class="menu-text"> Geolocalizacion </span>
                    <span class="menu-arrow"></span>
                </a>
                <div class="collapse" id="sidebarMaps">
                    <ul class="sub-menu">
                        <li class="side-nav-item">
                            <a href="#" data-turbo="false" class="side-nav-link">
