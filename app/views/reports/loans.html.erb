<div class="container py-4" data-turbo="false">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4">üìä Reporte de pr√©stamos activos y en mora</h2>
    <div>
      <%= link_to "‚¨áÔ∏è Excel", loans_reports_path(format: :xlsx, params: request.query_parameters), class: "btn btn-sm btn-outline-secondary", data: { turbo: false } %>
    </div>
  </div>

  <!-- Bot√≥n + filtro aplicado -->
  <div class="mb-3 d-flex align-items-center">
    <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#collectionFilterModal">
      Filtrar por jerarqu√≠a
    </button>

    <% if @selected_label.present? %>
      <div class="alert alert-info mb-0 ms-3">
        <strong>Jerarquia Aplicada:</strong> <%= @selected_label %>
      </div>
    <% end %>
  </div>

  <!-- Buscador -->
  <div class="card mb-3">
    <div class="card-body">
      <%= form_with url: loans_reports_path,
                    method: :get,
                    local: true,
                    data: { turbo: false },
                    class: "row g-2" do %>
        <div class="col-md-4">
          <%= label_tag :full_name, "Buscar por cliente" %>
          <%= text_field_tag :full_name, params[:full_name], class: "form-control" %>
        </div>
        <div class="col-md-2 align-self-end">
          <%= submit_tag "Buscar", class: "btn btn-primary w-100" %>
        </div>
        <div class="col-md-2 align-self-end">
          <%= link_to "Limpiar", loans_reports_path, class: "btn btn-outline-secondary w-100", data: { turbo: false } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Botones de rango de atraso -->
  <div class="mb-3">
    <div class="btn-group" role="group">
      <%= link_to "Todos",
                  loans_reports_path(request.query_parameters.except(:overdue_range)),
                  class: "btn btn-sm border border-2 rounded-pill text-white #{'active' unless params[:overdue_range]}",
                  data: { turbo: false } %>

      <% [["0-10","0‚Äì10 d√≠as","text-bg-dark"],
         ["11-20","11‚Äì20 d√≠as","bg-warning"],
         ["21-30","21‚Äì30 d√≠as","bg-secondary"],
         ["31-40","31‚Äì40 d√≠as","bg-primary"],
         ["41-50","41‚Äì50 d√≠as","bg-info"],
         ["51-60","51‚Äì60 d√≠as","bg-danger"],
         ["60+","60+ d√≠as","bg-success"]].each do |range, label, color_class| %>
        <%= link_to label,
                    loans_reports_path(request.query_parameters.merge(overdue_range: range)),
                    class: "btn btn-sm border border-2 rounded-pill text-white #{color_class} #{'active' if params[:overdue_range] == range}",
                    data: { turbo: false } %>
      <% end %>
    </div>
  </div>

  <!-- Tabla -->
  <div class="card shadow-sm">
    <div class="card-body">
      <table class="table table-sm table-striped table-hover align-middle">
        <thead>
          <tr>
            <th>Cliente</th>
            <th>Identificaci√≥n</th>
            <th>Ruta</th>
            <th>Fecha Compra</th>
            <th>Fecha Finalizaci√≥n</th>
            <th>Monto</th>
            <th>Compra</th>
            <th>Abonado</th>
            <th>Saldo</th>
            <th>D√≠as de atraso</th>
            <th>D√≠as sin abonar</th>
            <th>Estado</th>
          </tr>
        </thead>
        <tbody>
          <% @loans.each do |loan| %>
            <% status = loan.status_metrics %>
            <tr>
              <td class="text-nowrap">
                <div class="d-flex align-items-center gap-2">
                  <%= link_to summary_client_path(loan.client),
                              target: "_blank",
                              class: "btn btn-soft-success btn-icon btn-sm rounded-circle",
                              data: { turbo: false } do %>
                    <i class="ti ti-search"></i>
                  <% end %>
                  <span><%= loan.client.full_name %></span>
                </div>
              </td>
              <td><%= loan.client.identification %></td>
              <td><%= loan.client.collection&.name || "N/A" %></td>
              <td><%= l loan.created_at.to_date %></td>
              <td><%= loan.end_date %></td>
              <td><%= number_to_currency(loan.amount) %></td>
              <td><%= number_to_currency(loan.total_with_interest) %></td>
              <td><%= number_to_currency(loan.total_paid) %></td>
              <td><%= number_to_currency(loan.remaining_balance) %></td>
              <td>
                <span class="<%= status[:btn_class] %>"><%= status[:overdue_days] %></span>
              </td>
              <td>
                <span class="<%= status[:btn_class] %>"><%= status[:days_without_payment] %></span>
              </td>
              <td>
                <span class="badge rounded-pill <%= loan.status_color_class %>">
                  <%= loan.status_in_spanish %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <!-- Paginaci√≥n -->
      <div class="d-flex justify-content-center mt-3">
        <%= raw(pagy_bootstrap_nav(@pagy)) if @pagy.pages > 1 %>
      </div>

      <%= render "shared/loan_status_legend" %>
    </div>
  </div>
</div>

<%= render "reports/collection_filter_modal" %>
