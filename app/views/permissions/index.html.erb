<!-- app/views/permissions/index.html.erb -->

<div class="card-header d-flex align-items-center justify-content-between border-bottom border-light">
  <h4 class="header-title">Permisos</h4>
<%= button_to 'Nueva Permiso', new_permission_path(format: :turbo_stream), method: :get, form: { data: { turbo_frame: "modal" } }, class: "btn btn-primary" %>
</div>

<%= turbo_frame_tag "permissions_table" do %>
  <%= render "search_form", q: @q %>
  <%= render "table", permissions: @permissions %>
  <%= render partial: "pagination", locals: { pagy: @pagy } %>
<% end %>
