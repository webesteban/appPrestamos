<%= form_with model: payment_term, data: { turbo: false } do |f| %>
  <div class="mb-3">
    <%= f.label :percentage, "Porcentaje", class: "form-label" %>
    <%= f.number_field :percentage, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :quota_days, "Couta dias", class: "form-label" %>
    <%= f.number_field :quota_days, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :payment_frequency, "Frecuencia pago letras", class: "form-label" %>
    <%= f.text_field :payment_frequency, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :payment_days, "# dias pago", class: "form-label" %>
    <%= f.number_field :payment_days, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :monthly, "Mensual?", class: "form-label" %>
    <%= f.check_box :monthly %>
  </div>
  <div class="d-flex justify-content-end">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>




