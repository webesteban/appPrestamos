<!-- app/views/roles/index.html.erb -->

<div class="card-header d-flex align-items-center justify-content-between border-bottom border-light">
  <h4 class="header-title">Roles</h4>
<%= button_to 'NUEVO ROL', new_role_path(format: :turbo_stream), method: :get, form: { data: { turbo_frame: "modal" } }, class: "btn btn-primary" %>
</div>

<%= turbo_frame_tag "roles_table" do %>
  <%= render "search_form", q: @q %>
  <%= render "table", roles: @roles %>
  <%= render partial: "pagination", locals: { pagy: @pagy } %>
<% end %>
