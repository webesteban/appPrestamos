<div class="card-header d-flex align-items-center justify-content-between border-bottom border-light">
  <h4 class="header-title">Préstamos</h4>
  <%= button_to 'Nuevo Préstamo', new_loan_path(format: :turbo_stream), method: :get, form: { data: { turbo_frame: "modal" } }, class: "btn btn-primary" %>
</div>

<div class="table-responsive">
  <table class="table table-nowrap mb-0">
    <thead class="bg-light-subtle">
      <tr>
        <th>Cliente</th>
        <th>Término</th>
        <th>Días de Cuota</th>
        <th>Monto</th>
        <th>Seguro</th>
        <th class="text-center">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <%= turbo_frame_tag "loans_table" do %>
        <%= render "table", loans: @loans %>
      <% end %>
    </tbody>
  </table>
</div>
