<%= form_with model: loan, data: { turbo: false } do |f| %>
  <div class="mb-3">
    <%= f.label :client_id, "Cliente", class: "form-label" %>
    <%= f.collection_select :client_id, Client.all, :id, :full_name, { prompt: "Seleccione un cliente" }, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :payment_term_id, "Término de pago", class: "form-label" %>
    <%= f.collection_select :payment_term_id, PaymentTerm.all, :id, :payment_frequency, { prompt: "Seleccione un término" }, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :installment_days, "Días entre cuotas", class: "form-label" %>
    <%= f.number_field :installment_days, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :amount, "Monto del préstamo", class: "form-label" %>
    <%= f.number_field :amount, step: "0.01", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :insurance_amount, "Monto del seguro", class: "form-label" %>
    <%= f.number_field :insurance_amount, step: "0.01", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :insurance, "¿Incluye seguro?", class: "form-label" %>
    <%= f.check_box :insurance %>
  </div>

  <div class="mb-3">
    <%= f.label :details, "Detalles", class: "form-label" %>
    <%= f.text_area :details, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
