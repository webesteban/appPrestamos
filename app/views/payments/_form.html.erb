<%= form_with model: payment, data: { turbo: false } do |f| %>
  <div class="mb-3">
    <%= f.label :client_id, "Cliente", class: "form-label" %>
    <%= f.collection_select :client_id, Client.all, :id, :full_name, { prompt: "Seleccione un cliente" }, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :loan_id, "Préstamo", class: "form-label" %>
    <%= f.collection_select :loan_id, Loan.all, :id, :id, { prompt: "Seleccione un préstamo" }, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :amount, "Valor del Abono", class: "form-label" %>
    <%= f.number_field :amount, step: 0.01, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :latitude, "Latitud", class: "form-label" %>
    <%= f.text_field :latitude, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :longitude, "Longitud", class: "form-label" %>
    <%= f.text_field :longitude, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :paid_at, "Fecha del Abono", class: "form-label" %>
    <%= f.date_field :paid_at, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :details, "Detalles", class: "form-label" %>
    <%= f.text_area :details, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :user_id, "Usuario que lo creó", class: "form-label" %>
    <%= f.collection_select :user_id, User.all, :id, :full_name, { prompt: "Seleccione un usuario" }, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.submit "Guardar Abono", class: "btn btn-primary" %>
  </div>
<% end %>
