<div class="modal fade show d-block" id="userModal" tabindex="-1" style="background: rgba(0,0,0,0.5);" aria-modal="true" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= local_assigns[:title] || 'Cobro' %></h5>
        <button type="button" class="btn-close" data-action="click->modal#close" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body">
        <%= render partial: "collections/form", locals: { collection: collection, user_id: user_id } %>
      </div>
    </div>
  </div>
</div>

<script>
  document.querySelector('.btn-close')?.addEventListener('click', () => {
    const modal = document.getElementById('userModal');
    if (modal) {
      modal.classList.remove('show', 'd-block');
      modal.classList.add('fade');
      modal.style.display = 'none';
    }
  });
</script>
