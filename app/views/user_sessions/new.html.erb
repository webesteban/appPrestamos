<% @page_title = "Log In" %>

<div class="auth-bg d-flex min-vh-100 justify-content-center align-items-center">
  <div class="row g-0 justify-content-center w-100 m-xxl-5 px-xxl-4 m-3">
    <div class="col-xl-4 col-lg-5 col-md-6">
      <div class="card overflow-hidden text-center h-100 p-xxl-4 p-3 mb-0">

        <h3 class="fw-semibold mb-2">Login</h3>
        <p class="text-muted mb-4">Enter your username and password to access admin panel.</p>
        <%= form_with model: @user_session, url: user_sessions_path, method: :post, class: "text-start mb-3", data: { turbo: true } do |f| %>
          <% if @user_session.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @user_session.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :username, "Username", class: "form-label" %>
            <%= f.text_field :username, class: "form-control", placeholder: "Enter your username" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
          </div>

          <div class="d-flex justify-content-between mb-3">
            <div class="form-check">
              <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
              <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
            </div>
          </div>
          <div class="d-grid">
            <%= f.submit "Login", class: "btn btn-primary" %>
          </div>
        <% end %>

        <p class="mt-auto mb-0">
          <script>document.write(new Date().getFullYear())</script>
          Â© Upffy - By
        </p>
      </div>
    </div>
  </div>
</div>
