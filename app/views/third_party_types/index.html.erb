<!-- app/views/third_party_types/index.html.erb -->

<div class="card-header d-flex align-items-center justify-content-between border-bottom border-light">
  <h4 class="header-title">Tipo Terceros</h4>
<%= button_to 'Nuevo Tipo Tercero', new_third_party_type_path(format: :turbo_stream), method: :get, form: { data: { turbo_frame: "modal" } }, class: "btn btn-primary" %>
</div>

<%= turbo_frame_tag "sections_table" do %>
  <%= render "search_form", q: @q %>
  <%= render "table", third_party_types: @third_party_types %>
  <%= render partial: "pagination", locals: { pagy: @pagy } %>
<% end %>

