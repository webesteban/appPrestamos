<%= form_with model: permission,
              url: permission.persisted? ? permission_role_path(permission) : permission_roles_path,
              method: permission.persisted? ? :put : :post,
              html: { class: "border rounded p-4 shadow-sm bg-light" } do |f| %>

  <%= f.hidden_field :role_id %>
  <%= f.hidden_field :section_id %>

  <h6 class="mb-3">Seleccione las acciones permitidas:</h6>
  <div class="row">
    <% PermissionRole.actions.each_with_index do |action, i| %>
      <div class="col-6 mb-2">
        <div class="form-check">
          <%= f.check_box "can_#{action}", class: "form-check-input", id: "perm_#{action}" %>
          <%= f.label "can_#{action}", t("permissions.actions.#{action}", default: action.titleize), class: "form-check-label", for: "perm_#{action}" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= f.submit "Guardar Permisos", class: "btn btn-primary w-100" %>
  </div>
<% end %>
